
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User{
  id Int @id @default(autoincrement())
  name String?
  email String @unique
  password String?
  image String? @default("")
  plusMember Boolean @default(false)
  role String @default("customer")
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  seller Seller?
}
model Seller{
  id Int @id @default(autoincrement())
  userID Int @unique
  description String?
  type String?
  isApproved String? @default("pending")
  storename String
  reasonForRejection String?
  approvedAt DateTime?
  phoneNo String?
  income Int?
  address String?
  image String?
  approvedBy String?
  filled Boolean @default(false)
  products Product[]
    createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  user User @relation(fields: [userID] ,references: [id],onDelete: Cascade)
}
model Category{
  id Int @id @default(autoincrement())
  name String 
 
  products Product[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}
model Product{
  id Int @id @default(autoincrement())
  sellerId Int
  name String
  description String?
  stock Int?
  price Int?
  image String[]
  offerPrice Int?
  categoryId Int
  show Boolean @default(true)
  category Category @relation(fields: [categoryId],references: [id])
  seller Seller @relation(fields: [sellerId],references: [id])
  reviews Review[]
 cartItem CartItem[]
}
model Review{
  id Int @id @default(autoincrement())
  comment String?
  rating Int?
  productId Int
  product Product @relation(fields: [productId],references: [id])
}
model Cart{
  id Int @id @default(autoincrement())
  userId Int
  createdAt DateTime @default(now())
  cartItem CartItem[]
}
model CartItem{
  id Int @id @default(autoincrement())
  cartId Int
  productId Int
  quantity Int
  totalPrice Int
  product Product @relation(fields: [productId], references: [id])
  cart Cart @relation(fields: [cartId], references: [id])
}
model coupens{
  id Int @id @default(autoincrement())
  code String
  maxCartValue Int?
  discountType String @default("percentage")
  discountValue Int
  expiresAt DateTime?
  forPlus Boolean @default(false)
  forNewUser Boolean @default(true)
  maxDiscount Int?
  isActive Boolean @default(true)
  description String?
}